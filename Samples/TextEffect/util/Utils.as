package util {		import flash.display.DisplayObject;	import flash.geom.ColorTransform;	public class Utils {						public static function colourChange(mc:DisplayObject, colour:Number):void {			var col:ColorTransform = mc.transform.colorTransform;			col.color = colour;			mc.transform.colorTransform = col;		}				public static function stringEndsWith(str:String, substr:String):Boolean {			return str.substr(0 - substr.length) == substr;		}				public static function randomSort(a:Object, b:Object):Number {			var randomNum:Number = Math.random();			if (randomNum < 0.5) {				return 1;			} else {				return -1;			}		}		public static function removeItemAtPos(items_array:Array,pos:Number):Array {			var new_array:Array = new Array();			var start_array:Array = items_array.slice(0,pos);			var end_array:Array = items_array.slice(pos+1);			new_array = start_array.concat(end_array);			return new_array;		}				public static function replace(str, find, replace):String {			return str.split(find).join(replace);		}				public static function randRange(start:Number, end:Number): Number {   			return Math.floor(start + (Math.random() * (end - start)));		}	}}