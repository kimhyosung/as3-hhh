package util {		import flash.display.Sprite;	import flash.text.*;	public class Debug extends Sprite {				private var tf		:TextField		public function Debug(){			tf = new TextField();			tf.background = true;			tf.width = 120;			tf.height = 60;			tf.defaultTextFormat = new TextFormat("_sans", 14);			addChild(tf);			tf.text = " DEBUG PANEL"		}				public function addText(txt:String):void {			tf.appendText("\n "+txt);			tf.scrollV = tf.maxScrollV;		}				public function changeText(txt:String):void {			tf.text = txt;		}				public function toggle():void {			visible = !visible;		}			}}